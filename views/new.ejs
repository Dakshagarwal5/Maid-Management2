<%- include('partials/header') %>

<div class="container">
  <div class="card">
    <!-- Top-bar with buttons -->
    <div class="card-header">
      <nav class="top-bar">
        <a href="/maids" class="btn secondary">Dashboard</a>
        <a href="/maids/new" class="btn primary">Add Maid</a>
      </nav>
    </div>

    <!-- Form body -->
    <div class="card-body">
      <h1>Add Maid</h1>
      <form action="/maids" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Maid Name</label>
          <input type="text" id="name" name="name" placeholder="Enter maid name" required>
        </div>

        <div class="form-group">
            <label for="mobileNumber">Mobile Number</label>
            <input
              type="tel"
              id="mobileNumber"
              name="mobileNumber"
              placeholder="Enter mobile number"
              pattern="[0-9]{10}"
              inputmode="numeric"
              title="Please enter a valid 10-digit mobile number"
              required
            >
          </div>
          
          <div class="form-group">
            <label for="houseNumber">House Number</label>
            <input
              type="number"
              id="houseNumber"
              name="houseNumber"
              placeholder="Enter house number"
              min="1"
              step="1"
              inputmode="numeric"
              title="Please enter a valid house number"
              required
            >
          </div>
          
        <div class="form-group">
          <label for="aadhaarFile">Aadhaar Card</label>
          <input type="file" id="aadhaarFile" name="aadhaarFile" required>
        </div>

        <button type="submit" class="btn primary">Submit</button>
      </form>
    </div>

    <!-- Footer -->
    <div class="card-footer">
      Â© 2025 Maid Management
    </div>
  </div>
</div>

<%- include('partials/footer') %>
