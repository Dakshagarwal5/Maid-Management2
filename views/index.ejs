<%- include('partials/header') %>

<div class="container">
  <div class="card">
    <!-- top-bar -->
    <div class="card-header">
      <nav class="top-bar">
        <a href="/maids" class="btn secondary">Dashboard</a>
        <a href="/maids/new" class="btn primary">Add Maid</a>
      </nav>
    </div>

    <!-- body -->
    <div class="card-body">
      <h1>Maid Management Dashboard</h1>

      <% if (!maids.length) { %>
        <p class="empty">No maids added yet.</p>
      <% } else { %>
        <div class="table-responsive">
          <table>
            <thead>
              <tr>
                <th style="width:40px">#</th>
                <th>Name</th>
                <th>Mobile</th>
                <th>House</th>
                <th style="width:80px">Aadhaar</th>
                <th style="width:140px">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% maids.forEach((m,i) => { %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= m.name %></td>
                  <td><%= m.mobileNumber %></td>
                  <td><%= m.houseNumber %></td>
                  <td><a href="/uploads/<%= m.aadhaarFile %>" target="_blank">View</a></td>
                  <td class="actions">
                    <a href="/maids/<%= m.id %>/edit" class="btn edit small">Edit</a>
                    <form action="/maids/<%= m.id %>/delete" method="POST">
                      <button type="submit" class="btn delete small" onclick="return confirm('Delete this maid?')">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>

    <!-- footer -->
    <div class="card-footer">
      Â© 2025 Maid Management
    </div>
  </div>
</div>

<%- include('partials/footer') %>
